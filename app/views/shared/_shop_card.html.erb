<article class="bg-white rounded-xl shadow-sm border overflow-hidden hover:shadow-md transition" data-shop-id="<%= shop.id %>">
  <div class="flex flex-col md:flex-row">
    <div class="md:w-72 p-4">
      <div class="relative rounded-lg overflow-hidden mb-2 bg-gray-200 h-48">
        <% if shop.shop_images.any? && shop.shop_images.first.image.attached? %>
          <%= image_tag shop.shop_images.first.image, alt: shop.name, class: "w-full h-full object-cover" %>
        <% else %>
          <div class="w-full h-full flex items-center justify-center text-gray-400">
            <svg class="w-16 h-16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
          </div>
        <% end %>
      </div>
      <div class="flex gap-2 mt-3">
        <% if shop.phone.present? %>
          <%= link_to "tel:#{shop.phone}", class: "flex-1 flex items-center justify-center gap-2 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 text-sm font-medium" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/></svg>
            Call
          <% end %>
        <% end %>
        <%= link_to "https://maps.google.com/?q=#{CGI.escape(shop.full_address)}", target: "_blank", class: "flex-1 flex items-center justify-center gap-2 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 text-sm font-medium" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/></svg>
          Directions
        <% end %>
      </div>
    </div>

    <div class="flex-1 p-4 md:pl-0">
      <div class="flex items-start gap-3 mb-2">
        <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center text-green-600">
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h8a2 2 0 012 2v12a1 1 0 01-1 1h-3v-2a1 1 0 00-1-1H9a1 1 0 00-1 1v2H5a1 1 0 01-1-1V4z"/>
          </svg>
        </div>
        <div class="flex-1">
          <% if shop.verified? %>
            <div class="flex items-center gap-1 text-green-600 text-xs mb-1">
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <span>Verified by GreenPal</span>
            </div>
          <% end %>
          <h3 class="text-lg font-bold text-gray-800"><%= shop.name %></h3>
          <div class="flex items-center gap-2">
            <div class="flex items-center">
              <% 5.times do |i| %>
                <svg class="w-4 h-4 <%= i < shop.rating.to_i ? 'text-yellow-400' : 'text-gray-300' %>" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
              <% end %>
            </div>
            <span class="font-semibold"><%= shop.rating %></span>
            <span class="text-gray-500 text-sm">(<%= number_with_delimiter(shop.reviews_count) %> reviews)</span>
          </div>
        </div>
      </div>

      <div class="flex items-center gap-2 text-sm text-gray-600 mb-3">
        <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
        </svg>
        <span><%= shop.city %></span>
        <span>â€¢</span>
        <span class="<%= shop.open? ? 'text-green-600' : 'text-red-500' %>">
          <%= shop.open? ? 'Open' : 'Closed' %>
        </span>
        <% if shop.close_time.present? %>
          <span class="text-gray-500">until <%= shop.close_time.strftime("%l:%M %p").strip %> today</span>
        <% end %>
      </div>

      <div class="flex flex-wrap items-center gap-2 mb-3 text-sm">
        <% shop.brands.limit(4).each do |brand| %>
          <span class="px-2 py-1 bg-gray-100 rounded text-gray-600"><%= brand.name %></span>
        <% end %>
        <span class="text-gray-600">Blade Sharpen: <strong><%= shop.blade_sharpen_range %></strong></span>
      </div>

      <div class="text-sm text-gray-600 mb-3">
        <span>Tune-up: <strong><%= shop.tune_up_range %></strong></span>
        <span class="mx-3">|</span>
        <span>Typical Turnaround: <strong><%= shop.turnaround %></strong></span>
      </div>

      <div class="mb-3">
        <p class="text-sm font-semibold text-gray-700 mb-2">Service Offered</p>
        <div class="flex flex-wrap gap-2">
          <% shop.services.limit(4).each do |service| %>
            <span class="px-3 py-1 border border-green-500 text-green-600 rounded-full text-sm"><%= service.name %></span>
          <% end %>
        </div>
      </div>

      <p class="text-sm text-gray-600 mb-3">
        <%= truncate(shop.description, length: 120) %>
        <%= link_to "Read More", location_shop_path(location_slug: shop.location.slug, id: shop.id), class: "text-sky-500 font-medium" %>
      </p>

      <div class="flex items-center justify-between">
        <div class="flex items-center gap-3 text-gray-400">
          <svg class="w-5 h-5 hover:text-pink-500 cursor-pointer" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
          <svg class="w-5 h-5 hover:text-blue-600 cursor-pointer" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
          <svg class="w-5 h-5 hover:text-blue-400 cursor-pointer" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
          <svg class="w-5 h-5 hover:text-blue-700 cursor-pointer" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
        </div>
        <%= link_to "View Profile", location_shop_path(location_slug: shop.location.slug, id: shop.id), 
            class: "px-6 py-2 bg-green-500 text-white rounded-lg font-semibold hover:bg-green-600 transition" %>
      </div>
    </div>
  </div>
</article>
