<% content_for :title, "#{@shop.name} - Lawn Mower Repair in #{@shop.city} | GreenPal" %>

<div class="max-w-7xl mx-auto px-6 py-8">
  <nav class="flex items-center gap-2 text-sm mb-6">
    <%= link_to "GreenPal", root_path, class: "text-sky-500 hover:underline" %>
    <span class="text-gray-400">›</span>
    <%= link_to @location.name, location_shops_path(location_slug: @location.slug), class: "text-sky-500 hover:underline" %>
    <span class="text-gray-400">›</span>
    <span class="text-gray-600"><%= @shop.name %></span>
  </nav>

  <div class="bg-white rounded-xl shadow-sm border overflow-hidden">
    <div class="p-6">
      <div class="flex items-start gap-4 mb-6">
        <div class="w-16 h-16 bg-green-100 rounded-xl flex items-center justify-center text-green-600">
          <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h8a2 2 0 012 2v12a1 1 0 01-1 1h-3v-2a1 1 0 00-1-1H9a1 1 0 00-1 1v2H5a1 1 0 01-1-1V4z"/>
          </svg>
        </div>
        <div class="flex-1">
          <% if @shop.verified? %>
            <div class="flex items-center gap-1 text-green-600 text-sm mb-1">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <span>Verified by GreenPal</span>
            </div>
          <% end %>
          <h1 class="text-3xl font-bold text-gray-800 mb-2"><%= @shop.name %></h1>
          <div class="flex items-center gap-3">
            <div class="flex items-center">
              <% 5.times do |i| %>
                <svg class="w-5 h-5 <%= i < @shop.rating.to_i ? 'text-yellow-400' : 'text-gray-300' %>" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
              <% end %>
            </div>
            <span class="text-xl font-semibold"><%= @shop.rating %></span>
            <span class="text-gray-500">(<%= number_with_delimiter(@shop.reviews_count) %> reviews)</span>
          </div>
        </div>
      </div>

      <div class="grid md:grid-cols-2 gap-8">
        <div>
          <h2 class="text-xl font-semibold mb-4">About</h2>
          <p class="text-gray-600 mb-6"><%= @shop.description %></p>

          <h3 class="font-semibold mb-2">Services Offered</h3>
          <div class="flex flex-wrap gap-2 mb-6">
            <% @shop.services.each do |service| %>
              <span class="px-3 py-1 border border-green-500 text-green-600 rounded-full text-sm"><%= service.name %></span>
            <% end %>
          </div>

          <h3 class="font-semibold mb-2">Brands Serviced</h3>
          <div class="flex flex-wrap gap-2">
            <% @shop.brands.each do |brand| %>
              <span class="px-3 py-1 bg-gray-100 rounded text-gray-600 text-sm"><%= brand.name %></span>
            <% end %>
          </div>
        </div>

        <div>
          <div class="bg-gray-50 rounded-lg p-6">
            <h3 class="font-semibold mb-4">Contact Information</h3>
            <div class="space-y-3">
              <div class="flex items-center gap-3">
                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                </svg>
                <span><%= @shop.full_address %></span>
              </div>
              <% if @shop.phone.present? %>
                <div class="flex items-center gap-3">
                  <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                  </svg>
                  <%= link_to @shop.phone, "tel:#{@shop.phone}", class: "text-sky-500 hover:underline" %>
                </div>
              <% end %>
              <% if @shop.email.present? %>
                <div class="flex items-center gap-3">
                  <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                  <%= link_to @shop.email, "mailto:#{@shop.email}", class: "text-sky-500 hover:underline" %>
                </div>
              <% end %>
            </div>

            <div class="mt-6 pt-6 border-t">
              <h4 class="font-semibold mb-2">Hours</h4>
              <p class="<%= @shop.open? ? 'text-green-600' : 'text-red-500' %>">
                <%= @shop.open? ? 'Open Now' : 'Closed' %>
              </p>
              <% if @shop.open_time && @shop.close_time %>
                <p class="text-gray-600">
                  <%= @shop.open_time.strftime("%l:%M %p").strip %> - <%= @shop.close_time.strftime("%l:%M %p").strip %>
                </p>
              <% end %>
            </div>

            <div class="mt-6 pt-6 border-t">
              <h4 class="font-semibold mb-2">Pricing</h4>
              <p class="text-gray-600">Blade Sharpening: <strong><%= @shop.blade_sharpen_range %></strong></p>
              <p class="text-gray-600">Tune-up: <strong><%= @shop.tune_up_range %></strong></p>
              <p class="text-gray-600">Turnaround: <strong><%= @shop.turnaround %></strong></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
